{
  "name": "crm-server",
  "version": "1.0.0",
  "description": "Backend del CRM",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:base": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:test": "cross-env NODE_ENV=test ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:prod": "cross-env NODE_ENV=production ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "build:prod": "cross-env NODE_ENV=production tsc",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/index.js",
    "start:test": "cross-env NODE_ENV=test node dist/index.js",
    "init-db": "ts-node src/scripts/initDb.ts",
    "init-roles": "ts-node src/scripts/initRoles.ts",
    "update-roles": "ts-node src/scripts/updateRoles.ts",
    "check-user-role": "ts-node src/scripts/checkUserRole.ts",
    "assign-admin": "ts-node src/scripts/assignAdminRole.ts",
    "fix-enums": "ts-node src/scripts/fixEnumConflict.ts",
    "create-task-columns": "ts-node src/scripts/createTaskColumns.ts",
    "check-task-columns": "ts-node src/scripts/checkTaskColumns.ts",
    "create-ticket-columns": "ts-node src/scripts/createTicketColumns.ts",
    "create-activity-columns": "ts-node src/scripts/createActivityColumns.ts",
    "migrate-remove-not-started": "ts-node src/scripts/migrateRemoveNotStartedStatus.ts"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "googleapis": "^166.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "playwright": "^1.56.1",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
